static ecs_world_t* g_flecs_world_c = nullptr;

inline void flecs_init() {
    if (!g_flecs_world_c) {
        // Use ecs_mini() for minimal Flecs world (no addons)
        g_flecs_world_c = ecs_mini();
        printf(\"[flecs] ECS world created via ecs_mini()\\n\");
    }
}

inline void flecs_shutdown() {
    if (g_flecs_world_c) {
        ecs_fini(g_flecs_world_c);
        g_flecs_world_c = nullptr;
    }
}

inline void flecs_add_entity(int64_t jolt_id, double radius, int64_t r, int64_t g, int64_t b) {
    // Create Flecs entity via C API
    uint64_t flecs_id = 0;
    if (g_flecs_world_c) {
        flecs_id = ecs_new(g_flecs_world_c);
    }
    // Store in vector for iteration (avoids JIT template issues with Flecs queries)
    Entity e;
    e.flecs_id = flecs_id;
    e.jolt_id = (uint32_t)jolt_id;
    e.radius = (float)radius;
    e.r = (uint8_t)r;
    e.g = (uint8_t)g;
    e.b = (uint8_t)b;
    get_entities().push_back(e);
}

inline int64_t flecs_entity_count() {
    return (int64_t)get_entities().size();
}

inline void flecs_clear_entities() {
    get_entities().clear();
}

